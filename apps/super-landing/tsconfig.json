{
  "extends": "@turbo-super/shared/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@turbo-super/ui": ["../../packages/ui/src"],
      "@turbo-super/shared": ["../../packages/shared/src"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules", "src/tests/**", "**/*.test.ts", "**/*.test.tsx"]
}
