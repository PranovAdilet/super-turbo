{
  "name": "@turbo-super/shared",
  "version": "0.0.0",
  "private": true,
  "description": "Общие утилиты и хуки для turbo-super",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs", 
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./data": {
      "import": "./dist/data/index.mjs",
      "require": "./dist/data/index.js"
    },
    "./translation": {
      "types": "./dist/translation/index.d.ts",
      "import": "./dist/translation/index.mjs",
      "require": "./dist/translation/index.js"
    },
    "./tsconfig": "./tsconfig/base.json",
    "./tsconfig/library.json": "./tsconfig/library.json",
    "./tsconfig/nextjs.json": "./tsconfig/nextjs.json"
  },
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**",
    "tsconfig/**",
    "dist/translation/index.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@turbo-super/eslint-config": "workspace:*",
    "@types/node": "^20.17.32",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.446.0",
    "sonner": "^1.4.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
} 