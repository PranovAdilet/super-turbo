  "devDependencies": {
    "@turbo-super/eslint-config": "workspace:*",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^9.24.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "restricted"
